# Production Environment Variables
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-2"

# Project Configuration
project_name = "user-registration-microservice"
environment  = "prod"
owner        = "DevOps Team"

# VPC Configuration
vpc_cidr           = "10.2.0.0/16"
public_subnets     = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
private_subnets    = ["10.2.10.0/24", "10.2.20.0/24", "10.2.30.0/24"]
enable_nat_gateway = true

# EC2 Configuration
instance_type  = "t3.medium"
instance_count = 3

# Key Pair Configuration (Terraform will create the key pair automatically)
create_key_pair = true
key_pair_name   = "user-registration-prod-key"

# Network Configuration (restricted for production security)
ssh_allowed_cidrs = ["10.0.0.0/8"]  # Only VPC access
