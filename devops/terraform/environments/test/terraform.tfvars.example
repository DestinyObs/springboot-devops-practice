# Test Environment Variables
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-2"

# Project Configuration
project_name = "user-registration-microservice"
environment  = "test"
owner        = "DevOps Team"

# VPC Configuration
vpc_cidr           = "10.1.0.0/16"
public_subnets     = ["10.1.1.0/24", "10.1.2.0/24"]
private_subnets    = ["10.1.10.0/24", "10.1.20.0/24"]
enable_nat_gateway = true

# EC2 Configuration
instance_type  = "t3.small"
instance_count = 2

# Key Pair Configuration (Terraform will create the key pair automatically)
create_key_pair = true
key_pair_name   = "user-registration-test-key"

# Network Configuration (should be restricted in real scenario)
ssh_allowed_cidrs = ["0.0.0.0/0"]

# Load Balancer
enable_alb = true
